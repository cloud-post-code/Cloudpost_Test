{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "buildCommand": "npm install && npm run build --workspace=@cloudpost/buyer-portal",
    "startCommand": "npm start --workspace=@cloudpost/buyer-portal",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}

