{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd ../.. && npm install && npm run build --workspace=@cloudpost/backend"
  },
  "deploy": {
    "startCommand": "cd ../.. && npm start --workspace=@cloudpost/backend",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}

